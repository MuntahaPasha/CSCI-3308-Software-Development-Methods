create database food4u;

create table if not exists user (username varchar(20) not null, email varchar(255) not null, password varchar(12) not null );

Create table if not exists recipe (recipename varchar(255) not null, price double(3,2) not null, link varchar(255) not null, username varchar(255) not null);



Select recipe.name, recipe.price, recipe.link from recipe inner join user on recipe.username = user.username where recipe.username = //some variable for username;
